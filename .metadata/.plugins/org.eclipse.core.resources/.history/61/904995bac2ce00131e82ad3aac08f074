#include <iostream>
#include <fstream>

using namespace std;

int main()
{

	ifstream inFile;
	inFile.open("sampleTcpDump.dat", ios::in|ios::binary|ios::ate);

	u16 bytes;
	bytes = ReadU16(inFile);
	cout << bytes;

	return 0;
}

u16 ReadU16(istream& file)
{
  u16 val;
  u8 bytes[2];

  file.read( (char*)bytes, 2 );  // read 2 bytes from the file
  val = bytes[0] | (bytes[1] << 8);  // construct the 16-bit value from those bytes

  return val;
}
